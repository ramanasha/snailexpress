<html lang="en">
<%- include("partials/_head") %>
<header class="text-center">
    <h1> Order Status </h1>
</header>

<body>
  <div class="row">
    <div class="column large-7">
      <div class="progressbar" style="margin: 10rem 0;"></div>
      <script>
        $(document).ready(function() {
          var interval = 3000;
          var endTime = new Date(new Date().getTime() + interval);
          var el = $('.progressbar');
          el.append('<img src="https://placehold.it/100x100" style="position: relative; display:block; transform: translateX(-50%);">');
          el.append('<div class="bar-container" style="background:lightgrey"><span class="bar" style="background: black; height: 10px; display: inline-block"></span></div>');
          
          var bar = el.find('.bar');
          var img = el.find('img');
          
          function updateProgressBar() {
            var currentTime = new Date().getTime();
            var factor =  1 - ((endTime.getTime() - currentTime) / interval);
            factor = Math.min(1, factor); // cap it at 1
            var width = Math.round(factor * 100, 2) + "%";
            bar.css('width', width);
            img.css('left', width);
            
            // FIXME we may get an update that extends the progress bar
            if (factor !== 1) {
              setTimeout(updateProgressBar, 50);
            }
          }
          
          updateProgressBar();
        })
      </script>
      <div class="row">
        <div class="medium-6 column">
          <img src="https://www.google.com/permissions/images/maps-att.png" />         
        </div>
        <addr class="medium-6 column">
          (725) 352-3267<br />
          Nicholas Desmond Simon Graham<br />
          PO Box 1230<br />
          Georgetown<br />
          Grand Cayman<br />
          CAYMAN ISLANDS - UK
        </addr>
      </div>
    </div>
    
    <div class="column large-5">
      <p>To save your favourites, create a new account!</p>
      <button class="large expanded button">Sign Up</button>

      <form>
        <label>
          Username
          <input type="text" placeholder="Username" />
        </label>
        <label>
          Password
          <input type="text" placeholder="Password" />
        </label>
        <button type="submit" class="expanded button">Sign Up</button>
      </form>

    </div>
  </div>
</body>

</html>




















