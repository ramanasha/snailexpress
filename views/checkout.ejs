<html lang="en">
<%- include("partials/_head") %>
<header class="text-center">
    <h1> Checkout </h1>
</header>

<body>
  <div class="row">
    <div class="column large-7">
     <h2>Cart</h2>
      <table class="cart">
        <thead>
          <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% cart.forEach((item) => { %>
            <tr>
              <td>
                <img class="thumbnail preview" src="/images/products/<%= item.image %>">
                <%= item.name %>
              </td>
              <td><%= item.quantity %></td>
              <td>$<%= item.price %></td>
            </tr>
          <% }); %>
        </tbody>
        <tfoot>
          <tr>
            <td></td>
            <td></td>
            <td>
              Subtotal:
              <span class="subtotal">$<%= subtotal %></span>
            </td>
          </tr>
        </tfoot>
      </table>
      <div>
        <div class="medium-6 column">
          <%- include("partials/_maps") %>
        </div>
        <addr class="medium-6 column">
          (725) 352-3267<br />
          Nicholas Desmond Simon Graham<br />
          PO Box 1230<br />
          Georgetown<br />
          Grand Cayman<br />
          CAYMAN ISLANDS - UK
        </addr>
      </div>
    </div>

    <div class="column large-5">
      <h2>Payment</h2>

      <p>Enter your information to confirm your order.</p>
      <% messages.forEach((message) => { %>
        <div class="callout"><%= message %></div>
      <% }); %> 
      <ul class="tabs" data-tabs id="example-tabs">
        <li class="tabs-title is-active"><a href="#panel1" aria-selected="true">Credit</a></li>
        <li class="tabs-title"><a href="#panel2">Pay in store</a></li>
      </ul>

      <div class="tabs-content" data-tabs-content="example-tabs">
        <div class="tabs-panel is-active" id="panel1">
          <form class="credit checkout" method="POST" action="/checkout" >
            <label>
              Name
              <input class="name" name="name" type="text" placeholder="Joe Smith" />
            </label>
            <label>
              Phone Number
              <input class="phoneno" name="phoneno" type="text" placeholder="324534573" />
            </label>
            <label>
              Card Number
              <input class="card_number" name="card_number" type="text" placeholder="XXXX-XXXX-XXXX-XXXX" />
            </label>
            <div class="row">
              <label class="small-6 column">
                CVC
                <input class="card_cvc" name="card_cvc" type="number" placeholder="XXX" />
              </label>
              <label class="small-6 column">
                Expiry
                <input class="card_expiry_month" name="card_expiry_month" type="number" class="column small-6" placeholder="MM" />
                <input class="card_expiry_year" name="card_expiry_year" type="number" class="column small-6" placeholder="YYYY" />
              </label>
            </div>
            <label>
              Special Requests
              <textarea class="special_requests" name="special_requests"></textarea>
            </label>
            <button type="submit" class="expanded button">Pay Now</button>
          </form>
        </div>
        <div class="tabs-panel" id="panel2">
         <form class="pay-in-store checkout" method="POST" action="/checkout" >
            <label>
              Name
              <input class="name" name="name" type="text" placeholder="Joe Smith" />
            </label>
            <label>
              Phone Number
              <input class="phoneno" name="phoneno" type="text" placeholder="324534573" />
            </label>
            <label>
              Special Requests
              <textarea class="special_requests" name="special_requests"></textarea>
            </label>
            <button type="submit" class="expanded button">Send Order</button>
          </form>
        </div>
      </div>

    </div>
  </div>
  <script type="text/javascript" src="/scripts/checkout.js"></script>
</body>

</html>
