<!DOCTYPE html>
<html lang="en">
  <%- include("partials/_head") %>

  <body>
    <!-- This is our big wide header photo and message, if you want -->
    <h1>Hello World!</h1>
    <div class="row">
      <img src="https://placehold.it/2000x750&amp;text=1st">
    </div>

    <!-- CART -->
    <div class="row">
      <div class="column large-3">
        <h2 style="text-align: center"><i class="fa fa-shopping-cart" aria-hidden="true"></i> Cart <i class="fa fa-shopping-cart" aria-hidden="true"></i></h2>
        <div class="row">
          <div class="column">
            <% cart.forEach((item) => { %>
              <!-- <img class="thumbnail" src="<%= items[i].image %>"> -->
              <!--current stand in placeholder icons -->
              <img class="thumbnail" src="https://placehold.it/300x200">
              <h5><%= item.name %></h5>
              <p><%= item.quantity %></p>
              <p>$<%= item.price*item.quantity %></p>
              <p>
                <input type="number" value="1" /><a href="#" class="button">Change Quantity</a>
              </p>
            <% }); %>
          </div>
        </div>
      </div>

      <!-- INVENTORY -->
      <div class="column large-9 small-up-2 large-up-3">
        <% for (var i = 0; i < items.length; i++) { %>
        <div class="column">
          <!-- <img class="thumbnail" src="<%= items[i].image %>"> -->
          <img class="thumbnail" src="https://placehold.it/300x200">
          <h5><%= items[i].name %></h5>
          <p>$<%= items[i].price %></p>
          <p><%= items[i].calories %> calories per serving</p>
          <% if (items[i].weight === 1) { %>
            <p><%= items[i].weight %> lb</p>
          <% } else { %>
            <p><%= items[i].weight %> lbs</p>
          <% } %>
          <p><%= items[i].description %></p>
          <a href="#" class="button expanded">Add item to cart</a>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
